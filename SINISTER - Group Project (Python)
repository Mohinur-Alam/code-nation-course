def bloodstain_choice():
    partc = ["follow the bloodprints", "go to office"]
    userinput = ""
    while userinput not in partc:
        print_slow("options: follow the bloodprints or go to office")
        userinput = input()
        if userinput == "follow the bloodprints":
          blood()
        elif userinput == "go to office":
         searchoffice()
    else:
        print_slow("Please enter one of the given choices")
        stain_choice()
 
def bloodstains():
    print_slow("You come accross a hallway with another two paths, ")
    print_slow("There is one that leads forward which has the bloodprints leading in that direction ")
    print_slow("and one to your right that appears to lead to an office. ")
    print_slow("Would you like to follow the bloodprints or go to the office")
    bloodstain_choice()
 
def hallways():
    parta = input("Enter your choice: ")
    if parta.lower() == 'left':
        fight_flight()
    elif parta.lower() == 'right':
        bloodstains()
 
