def talking_lucy():
   DiceRoll3 = ["roll dice"]
   print_slow("as head for the hallway and you overhear voices from an air vent to your left.")
   print_slow("Mysterious voice: She is a unique specimen, her bone structure has given her powers like nothing we have ever seen.")
   print_slow("Mysterious sound: Click clack click clack eek")
   print_slow("As you walk down the staircase the dice once again falls, ")
   print_slow2("@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@")
   print_slow2("@@@@@@@@@@@@@@&#BP5J7!~^^!7!~~JB@@@@@@@@@@@@@@@@@@")
   print_slow2("@@@@@@@&P?~:.            G&@@#.  :J#@@@@@@@@@@@@@@")
   print_slow2("@@@@@@J      ~&@@&P.       ...      .!G@@@@@@@@@@@")
   print_slow2("@@@@@#        .^!7!                     ^P&@@@@@@@")
   print_slow2("@@@@@7                            Y@@@&?   ^P@@@@@")
   print_slow2("@@@@@: .J5^ .          PBBP?.      .~7?~      Y@@@")
   print_slow2("@@@@&  ?@@@:  ..       !P#&&J                 .@@@")
   print_slow2("@@@@G  :&@@^   ....                           7@@@")
   print_slow2("@@@@?   .~:     .....                 :?PJ.  .&@@@")
   print_slow2("@@@@~            ......    .....     J@@@@!  Y@@@@")
   print_slow2("@@@@:     :#&Y.  ......  ....       .@@@@P  :@@@@@")
   print_slow2("@@@@.     !@@@J   .....  ..          ~Y?:   B@@@@@")
   print_slow2("@@@@.      J&&~    .... ..                 ?@@@@@@")
   print_slow2("@@@@?       ..      ..                    :@@@@@@@")
   print_slow2("@@@@@B:       .:     .                    &@@@@@@@")
   print_slow2("@@@@@@@P.    :&@#:        .?#&B.         P@@@@@@@@")
   print_slow2("@@@@@@@@@5.  :@@@#       .#@@@@:        Y@@@@@@@@@")
   print_slow2("@@@@@@@@@@@5. :PB7       :@@@#^     .~5&@@@@@@@@@@")
   print_slow2("@@@@@@@@@@@@@P:           .:.  .:7P#@@@@@@@@@@@@@@")
   print_slow2("@@@@@@@@@@@@@@@G~        ..^?P#@@@@@@@@@@@@@@@@@@@")
   print_slow2("@@@@@@@@@@@@@@@@@&J~~!JG#&@@@@@@@@@@@@@@@@@@@@@@@@")  
   print_slow("check dice to find your fate")
   userinput = ""
   while userinput not in DiceRoll3:
      print("Options: check dice")
      userinput = input()
      if userinput == "check dice":
         print_slow("you checked the dice")
         roll3 = random.randint(1,6)
         print(roll3)
         print(roll2)
         print(mohinursrolls)
         total = mohinursrolls + roll2 + roll3
         print(total)
         if total >= 14:
            secret_ending2()
         else:
            voice_choice()
 
