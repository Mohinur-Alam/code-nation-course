import random
import time
import sys
import threading
mohinursrolls = 5
roll2 = random.randint(1,6)
playerInventory = "torch"
def print_slow(text, delay=0.025):
 for char in text:
        print(char, end='', flush=True)
        time.sleep(delay)
 print()

def print_slow2(text, delay=0.0025):
 for char in text:
        print(char, end='', flush=True)
        time.sleep(delay)
 print()
 
def game_over():
    print("You lose the game")
    print("Credits:")
    print("Jordan Wilcock")
    print("Mohinur Alam")
    print("Cameron Jackson")
    print("James Walton")
    replay()
 
def replay():
    end_game = input("Would you like to play again? ")
    if end_game.lower() == "yes":
        welcome()
    else:
        print("Goodbye!")
        sys.exit()
 
