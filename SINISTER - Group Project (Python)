def ReviewFootage():
   Dice = ["check dice"]
   print_slow("You look at the screen and see a woman in a cage and she is staring against the wall at something that is white and a box but you cant quite make it out because the camera footage is blurry. You tell yourself “Maybe this is Lucy?”. You then step away from the desk")
   print_slow("As you decide to sit down and take a break from the shock of what you have just seen, the dice once again falls out of your pocket and landing on the floor.")
   print_slow2("@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@")
   print_slow2("@@@@@@@@@@@@@@&#BP5J7!~^^!7!~~JB@@@@@@@@@@@@@@@@@@")
   print_slow2("@@@@@@@&P?~:.            G&@@#.  :J#@@@@@@@@@@@@@@")
   print_slow2("@@@@@@J      ~&@@&P.       ...      .!G@@@@@@@@@@@")
   print_slow2("@@@@@#        .^!7!                     ^P&@@@@@@@")
   print_slow2("@@@@@7                            Y@@@&?   ^P@@@@@")
   print_slow2("@@@@@: .J5^ .          PBBP?.      .~7?~      Y@@@")
   print_slow2("@@@@&  ?@@@:  ..       !P#&&J                 .@@@")
   print_slow2("@@@@G  :&@@^   ....                           7@@@")
   print_slow2("@@@@?   .~:     .....                 :?PJ.  .&@@@")
   print_slow2("@@@@~            ......    .....     J@@@@!  Y@@@@")
   print_slow2("@@@@:     :#&Y.  ......  ....       .@@@@P  :@@@@@")
   print_slow2("@@@@.     !@@@J   .....  ..          ~Y?:   B@@@@@")
   print_slow2("@@@@.      J&&~    .... ..                 ?@@@@@@")
   print_slow2("@@@@?       ..      ..                    :@@@@@@@")
   print_slow2("@@@@@B:       .:     .                    &@@@@@@@")
   print_slow2("@@@@@@@P.    :&@#:        .?#&B.         P@@@@@@@@")
   print_slow2("@@@@@@@@@5.  :@@@#       .#@@@@:        Y@@@@@@@@@")
   print_slow2("@@@@@@@@@@@5. :PB7       :@@@#^     .~5&@@@@@@@@@@")
   print_slow2("@@@@@@@@@@@@@P:           .:.  .:7P#@@@@@@@@@@@@@@")
   print_slow2("@@@@@@@@@@@@@@@G~        ..^?P#@@@@@@@@@@@@@@@@@@@")
   print_slow2("@@@@@@@@@@@@@@@@@&J~~!JG#&@@@@@@@@@@@@@@@@@@@@@@@@")  
   print_slow("check dice to find your fate")
   userinput = ""
   while userinput not in Dice:
      print_slow("Options: check dice")
      userinput = input()
      if userinput == "check dice":
         print_slow("you checked the dice ")
         roll2 = random.randint(1,6)
         print(roll2)
         print_slow("You are still confused as to what this means so you once again pick it back up and put it back into your pocket")
         if roll2 >= 2:
          Crawl_decision()
         else:
          talking_lucy()
      elif userinput != "roll dice":
         print_slow("Type roll dice to roll the dice")
 
def searchoffice():
    Options = ["inspect footage", "leave"]
    print_slow("You decide to search the office instead, inside you find a computer. To your surprise this computer is on, and the seat is warm as if someone has just left the room,")
    userInput = ""
    while userInput not in Options:
       print_slow("Options: inspect footage")
       userInput = input()
       if userInput == "inspect footage":
          ReviewFootage()
       elif userInput != "inspect footage":
          print_slow("Type Inspect Footage to Inspect the footage")
