def hostages():
    while True:
        print_slow("You decide to not get closer and as you crawl across the floor to avoid guards you now notice multiple people being gathered like livestock and squeezed into cages. You now have a choice:")
 
        print_slow("1. Attempt to free the hostages")
        print_slow("2. Remain Hidden")
 
        choice = input("Please enter option (1 or 2): ")
 
        if choice == "1":
            free_hostages()
            break  
        elif choice == "2":
            stay_hidden()
            break  
        else:
            print_slow("Invalid choice. Please choose 1 or 2")
 
 
 
