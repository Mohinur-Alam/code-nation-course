def main():
       
        print("Are you brave enough to play?")
        intro = input("> ")
        if intro.lower() == "yes":
            start()
        elif intro.lower() == "no":
            print("You are not brave enough for this challenge.")
            print("Goodbye!")
            sys.exit()
        else:
            print("Invalid choice. Please yes or no.")
            main()
 
def title():
        print_slow2("\033[91m.oOOOo.  ooOoOOo o.     O ooOoOOo .oOOOo.  oOoOOoOOo o.OOoOoo `OooOOo. ")
        print_slow2("o     o     O    Oo     o    O    o     o      o      O        o     `o ")
        print_slow2("O.          o    O O    O    o    O.           o      o        O      O ")
        print_slow2(" `OOoo.     O    O  o   o    O     `OOoo.      O      ooOO     o     .O ")
        print_slow2("      `O    o    O   o  O    o          `O     o      O        OOooOO'  ")
        print_slow2("       o    O    o    O O    O           o     O      o        o    o   ")
        print_slow2("O.    .O    O    o     Oo    O    O.    .O     O      O        O     O  ")
        print_slow2(" `oooO'  ooOOoOo O     `o ooOOoOo  `oooO'      o'    ooOooOoO  O      o ")
        print_slow2("\033[0m")
        main()
 
 
def welcome():
        global welcome
        print_slow("Welcome to the game!")
        title()
 
if __name__ == "__main__":
  while True:
   print_slow("Please enter name")
   name = input()
   print_slow("Good luck, " +name+ ".")
   welcome()
        
                                    




                                                                                            
